#!/bin/sh
FROM rust:1.78-alpine
RUN apt-get update

RUN cargo install cargo-watch

ARG name=post
ARG config=123
ARG service_token=0000
ARG port=5050
ARG environment=development

# shellcheck disable=SC2154
ENV CONFIG="${config}"
# shellcheck disable=SC2154
ENV SERVICE_TOKEN="${service_token}"
# shellcheck disable=SC2154
ENV NAME="${name}"
# shellcheck disable=SC2154
ENV PORT="${port}"
# shellcheck disable=SC2154
ENV ENVIRONMENT="${environment}"

COPY sdk /app/backend/sdk

WORKDIR /app/backend/post

COPY post/Cargo.toml /app/backend/post/Cargo.toml
COPY post/Cargo.lock /app/backend/post/Cargo.lock

RUN apt-get install -y protobuf-compiler

COPY post /app/backend/post

RUN cargo build

CMD ["cargo", "watch", "-c", "-w", "src", "-x", "run --bin=main"]

EXPOSE "$PORT"
